<h2>Edit <%= @owner.name %></h2>

<form method="POST" action="/owners/<%= @owner.id %>">
  <div class="form-wrapper">

      <label for="name">Full Name:</label>
      <input type="text" name="name" value="<%= @owner.name %>">

      <label for="email">Email:</label>
      <input type="email" name="email" value="<%= @owner.email %>">

      <label for="phone">Phone:</label>
      <input type="tel" name="phone" value="<%= @owner.phone %>">

      <label for="has_cats">Has cats?</label>
        <% if @owner.has_cats == 't' %>
            <input type="hidden" name="has_cats" value="false" id="has_cats" >
            <input type="checkbox" name="has_cats" value="true" id="has_cats" <%= "checked" %>>
        <% else %>
            <input type="hidden" name="has_cats" value="false" id="has_cats" >
            <input type="checkbox" name="has_cats" value="true" id="has_cats" >
        <% end %>

      <label for="has_other_dogs">Has other dogs?</label>
        <% if @owner.has_other_dogs == 't' %>
            <input type="hidden" name="has_other_dogs" value="false" id="has_other_dogs" >
            <input type="checkbox" name="has_other_dogs" value="true" id="has_other_dogs" <%= "checked" %>>
        <% else %>
            <input type="hidden" name="has_other_dogs" value="false" id="has_other_dogs" >
            <input type="checkbox" name="has_other_dogs" value="true" id="has_other_dogs" >
        <% end %>

      <label for="has_children">Has children?</label>
        <% if @owner.has_children == 't' %>
            <input type="hidden" name="has_children" value="false" id="has_children" >
            <input type="checkbox" name="has_children" value="true" id="has_children" <%= "checked" %>>
        <% else %>
            <input type="hidden" name="has_children" value="false" id="has_children" >
            <input type="checkbox" name="has_children" value="true" id="has_children" >
        <% end %>

      <label for="bio"></label>
      <input type="text" name="bio" value="<%= @owner.bio %>">

      <div class="form-el">
        <input type="submit" value="Update Owner Details"/>
      </div>

  </div>
</form>
